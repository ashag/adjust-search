%search_form
  = "Search for a Github repo"

  = form_tag('/search_results', method: :get) do
    = label_tag(:topic, 'Topic')
    = text_field_tag(:topic)

    = label_tag(:user, 'User Name')
    = text_field_tag(:user)

    = label_tag(:language, 'Language')
    = text_field_tag(:language)

    = submit_tag 'Save'
